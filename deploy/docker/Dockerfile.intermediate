# =============================================================================
# ZTNA Intermediate Server â€” Production Dockerfile
# =============================================================================
# Multi-stage build: compile in Rust image, run in minimal Debian slim.
#
# Build (from repo root):
#   docker build -f deploy/docker/Dockerfile.intermediate -t ztna-intermediate .
#
# Run:
#   docker run -d --name ztna-intermediate \
#     -p 4433:4433/udp \
#     -v /path/to/certs:/etc/ztna/certs:ro \
#     -e RUST_LOG=info \
#     ztna-intermediate
# =============================================================================

# --- Build Stage ---
FROM rust:1.83-slim-bookworm AS builder

RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    cmake \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build
COPY intermediate-server/ intermediate-server/
RUN cargo build --release --manifest-path intermediate-server/Cargo.toml

# --- Runtime Stage ---
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Non-root user
RUN useradd -r -s /bin/false -u 1000 ztna

COPY --from=builder /build/intermediate-server/target/release/intermediate-server /usr/local/bin/

RUN mkdir -p /etc/ztna/certs && chown ztna:ztna /etc/ztna/certs

EXPOSE 4433/udp

USER ztna

ENV RUST_LOG=info

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD test -f /proc/1/cmdline || exit 1

ENTRYPOINT ["intermediate-server"]
CMD ["--port", "4433", \
     "--cert", "/etc/ztna/certs/cert.pem", \
     "--key", "/etc/ztna/certs/key.pem", \
     "--bind", "0.0.0.0"]
